        <Image url="@image/login.jpg" />
    </ImageView>
    <AnchorPane layoutX="22.0" layoutY="98.0" prefHeight="165.0" prefWidth="207.0" style="-fx-background-color: #40404080;">
        <TextField fx:id="username" alignment="CENTER" layoutX="29.0" layoutY="47.0" promptText="Username" />
